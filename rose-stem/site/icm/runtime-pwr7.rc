            "fixed_eg_fixed_eg_0dust0" : [BOREASZ_CREATEBC_FIXED_EG_FIXED_EG_0DUST0_KGO, "5Gb"],
            "varres_eg_fixed_eg_0dust0" : [BOREASZ_CREATEBC_VARRES_EG_FIXED_EG_0DUST0_KGO, "5Gb"],
            "global_eg_frame_eg_2dust2" : [BOREASZ_CREATEBC_GLOBAL_EG_FRAME_EG_2DUST2_KGO, "10Gb"],
            "frame_eg_varres_eg_2dust6" : [BOREASZ_CREATEBC_FRAME_EG_VARRES_EG_2DUST6_KGO, "15Gb"],
            "global_eg_fixed_eg_aqumtracer" : [BOREASZ_CREATEBC_GLOBAL_EG_FIXED_EG_AQUMTRACER_KGO, "10Gb"],
            "varres_eg_frame_eg_0dust0" : [BOREASZ_CREATEBC_VARRES_EG_FRAME_EG_0DUST0_KGO, "5Gb"],
            "frame_eg_fixed_eg_0dust0" : [BOREASZ_CREATEBC_FRAME_EG_FIXED_EG_0DUST0_KGO, "5Gb"],
            "global_eg_fixed_eg_timecontrol" : [BOREASZ_CREATEBC_GLOBAL_EG_FIXED_EG_TIMECONTROL_KGO, "15Gb"],
            }
    %}

    {%- for test_type, params in createbc_calcs_map_boreasz.iteritems() %}
