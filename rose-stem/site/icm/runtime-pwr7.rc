# ---------------------------------------------------------------------------------------------
# N48 EG global model
# ---------------------------------------------------------------------------------------------

{% if "boreasz_n48_omp_noios" in name_graphs_out or "boreasz_n48_omp_ios" in name_graphs_out -%}

    # N48 EndGame with OpenMP
    [[ICM_BOREASZ_N48_EG_OMP]]
        inherit = ICM_BOREASZ
        env-script = "eval $(rose task-env --path= --path='share/fcm_make_icm_boreasz_xlf_um_high_omp/build-*/bin')"
        script = "{{TASK_RUN}}"

{%- endif %}

{# N48 EG no IO server #}
{% if "boreasz_n48_omp_noios" in name_graphs_out -%}

    {#
     # Notes:
     # * ASTART sets namelist variable "astart", which contains
     #   the path to an atmosphere start dump
     # * "--path=" resets PATH to default values
    #}

    # Reconfiguration
    [[recon_icm_boreasz_n48_eg_omp_noios_1x2]]
        script = "{{TASK_RUN_RECON}}"
        inherit = ICM_BOREASZ_N48_EG_OMP, ICM_BOREASZ_LL, ICM_BOREASZ_PARALLEL_THREADS_2, ICM_BOREASZ_PARALLEL_TASKS_2, UM_N48_EG, RECON_1x2
        [[[environment]]]
            ASTART=../recon_icm_boreasz_n48_eg_omp_noios_1x2/atmos.astart

    # Atmosphere Model Run 1x2, OpenMP, no IOS
    [[atmos_icm_boreasz_n48_eg_omp_noios_1x2]]
        inherit = ICM_BOREASZ_N48_EG_OMP, ICM_BOREASZ_LL, ICM_BOREASZ_PARALLEL_THREADS_2, ICM_BOREASZ_PARALLEL_TASKS_2, UM_N48_EG, ATMOS_1x2, IOS_0
        [[[environment]]]
            ASTART=../recon_icm_boreasz_n48_eg_omp_noios_1x2/atmos.astart
#            ROSE_APP_OPT_CONF_KEYS=icm_boreasz

    # Comparison of recon output
    [[rose_ana_icm_boreasz_n48_eg_omp_noios_recon_kgo]]
        inherit =  ROSE_ANA_COMPARISON, ICM_BOREASZ_N48_EG_OMP, ICM_BOREASZ_AT, ROSE_ANA_RECON
        [[[environment]]]
            DIR0 = {{KGO_BOREASZ_ROOT_DIR}}/boreasz_n48_eg/{{BOREASZ_N48_EG_KGO}}
            DIR1 = ../recon_icm_boreasz_n48_eg_omp_noios_1x2
            KGO=0

    # Comparison of atmosphere output
    [[rose_ana_icm_boreasz_n48_eg_omp_noios_atmos_kgo]]
        inherit =  ROSE_ANA_COMPARISON, ICM_BOREASZ_N48_EG_OMP, ICM_BOREASZ_AT, ROSE_ANA_N48_EG
        [[[environment]]]
            DIR0 = {{KGO_BOREASZ_ROOT_DIR}}/boreasz_n48_eg/{{BOREASZ_N48_EG_KGO}}
            DIR1 = ../atmos_icm_boreasz_n48_eg_omp_noios_1x2
            KGO=0

    # Housekeeping task
    [[housekeep_atmos_icm_boreasz_n48_eg_omp_noios_1x2]]
        inherit = ICM_BOREASZ_HOUSEKEEPING, ICM_BOREASZ, ICM_BOREASZ_AT
        [[[environment]]]
            RUNDIR=../atmos_icm_boreasz_n48_eg_omp_noios_1x2

{%- endif %}

